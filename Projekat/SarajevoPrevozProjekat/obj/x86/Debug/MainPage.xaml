                <ImageBrush ImageSource="Assets/plava.png"/>
            </Button.Background>
        </Button>
        <TextBox x:ConnectionId='4' x:Name="textBox" HorizontalAlignment="Left" Height="19" Margin="10,249,0,0" TextWrapping="Wrap" Text="Ime" VerticalAlignment="Top" Width="168"/>
