        <TextBox x:ConnectionId='7' x:Name="textBox_Copy2" HorizontalAlignment="Left" Height="19" Margin="10,323,0,0" TextWrapping="Wrap" Text="Korisničko ime" VerticalAlignment="Top" Width="340"                                        />
        <TextBox x:ConnectionId='8' x:Name="textBox_Copy3" HorizontalAlignment="Left" Height="19" Margin="10,360,0,0" TextWrapping="Wrap" Text="e-mail" VerticalAlignment="Top" Width="340"                                        />
        <TextBox x:ConnectionId='9' x:Name="textBox_Copy4" HorizontalAlignment="Left" Height="19" Margin="10,397,0,0" TextWrapping="Wrap" Text="Lozinka" VerticalAlignment="Top" Width="340"                                        />
        <TextBox x:ConnectionId='10' x:Name="textBox_Copy5" HorizontalAlignment="Left" Height="19" Margin="10,434,0,0" TextWrapping="Wrap" Text="Ponovi lozinku" VerticalAlignment="Top" Width="340"                                        />
