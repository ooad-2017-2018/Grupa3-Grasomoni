            <Image.RenderTransform>
                <CompositeTransform Rotation="0.542"/>
            </Image.RenderTransform>
        </Image>
        <Button x:ConnectionId='3' x:Name="button" Content="REGISTRUJ SE" HorizontalAlignment="Left" Margin="183,583,0,0" VerticalAlignment="Top" Height="47" Width="167"                     >
