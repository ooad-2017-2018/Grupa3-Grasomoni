    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/1.png"/>
        </Grid.Background>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="55" Margin="10,10,0,0" VerticalAlignment="Top" Width="340" FocusVisualSecondaryBrush="#99EA0D0D" Background="#FF333337"/>
        <Image x:ConnectionId='1' x:Name="image" HorizontalAlignment="Left" Height="55" Margin="10,10,0,0" VerticalAlignment="Top" Width="57" RenderTransformOrigin="0.573,0.642" Source="Assets/Logo.jpg">

        </Image>
